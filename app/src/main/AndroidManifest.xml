<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.course">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Course">

        <activity
            android:name=".VerificationActivity"
            android:parentActivityName=".MainActivity"
            />

        <activity
            android:name=".PasswordsActivity"
            android:parentActivityName=".VerificationActivity"/>

        <activity
            android:name=".ThirdActivity"
            android:label="@string/third_act"
            android:parentActivityName=".SecondActivity"/>

        <activity
            android:name=".SecondActivity"
            android:label="@string/second_act"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".ScrollViewActivity"
            android:label="@string/label_scroll_view"
            android:parentActivityName=".SecondActivity"
            />

        <activity android:name=".MainActivity">
            <intent-filter>

                <!-- Here goes the thinks that this activity can do -->

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>